<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.mah.af6260.gotracker.StartFrag"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.17"
            android:layout_marginTop="200px">

            <Button
                android:text="Run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRun"
                android:layout_weight="1"
                android:backgroundTint="?attr/actionModeSplitBackground"
                android:textColor="@android:color/white" />

            <Button
                android:text="Walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnWalk"
                android:backgroundTint="?attr/actionModeSplitBackground"
                android:textColor="@android:color/white" />

            <Button
                android:text="Bicycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBicycle"
                android:layout_weight="1"
                android:backgroundTint="?attr/actionModeSplitBackground"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:weightSum="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?attr/actionModeSplitBackground"
                android:layout_margin="10px"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_height="45dp"
                    android:src="@drawable/error"
                    android:id="@+id/ivGps"
                    android:layout_width="75dp" />

                <TextView
                    android:text="GPS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tvGps"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?attr/actionModeSplitBackground"
                android:layout_margin="10px"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.04">

                <ImageView
                    android:src="@drawable/success"
                    android:id="@+id/ivStepdetector"
                    android:layout_width="75dp"
                    android:layout_height="45dp" />

                <TextView
                    android:text="Stepdetector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tvStepDetecter"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?attr/actionModeSplitBackground"
                android:layout_margin="10px"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:text="Start run"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnStartRun"
        android:backgroundTint="?attr/actionModeSplitBackground"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.17"
        android:textColor="@android:color/white" />
</RelativeLayout>
